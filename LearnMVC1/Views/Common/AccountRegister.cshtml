@{
    bool userExisted, passwordMismatch;
    if (ViewData.ContainsKey("UserExisted"))
    {
        userExisted = (bool)ViewData["UserExisted"];
    }
    else
    {
        userExisted = false;
    }

    if (ViewData.ContainsKey("PasswordMismatch"))
    {
        passwordMismatch = (bool)ViewData["PasswordMismatch"];
    }
    else
    {
        passwordMismatch = false;
    }
}
<c:url value="/common/register" var="registerControllerUrl"></c:url>
<div class="container card mt-2 mb-5 p-3 border-rounded">
    <h2>Register Page</h2>
    <form role="form" action="/Common/Account/Register" method="post">
        <div class="form-group">
            Yourname: <input class="form-control" type="text" name="fullname" placeholder="Nhập tên của bạn:"><br>
        </div>
        <div class="form-group">
            Email: <input class="form-control" type="email" name="email" placeholder="Nhập email của bạn:"><br>
        </div>
        <div class="form-group">
            Phone number: <input class="form-control" type="tel" name="phone" placeholder="Nhập số điện thoại của bạn với format: 0[0-9]{9} " pattern="0[0-9]{9}"><br>
        </div>
        <div class="form-group">
            Account name: <input class="form-control" type="text" name="username" placeholder="Nhập username của bạn:" required><br>
            @if (userExisted == true)
            {
                <span class="text-danger">User 's already existed</span><br>
            }
        </div>

        <div class="form-group">
            Password: <input class="form-control" type="password" name="password" placeholder="Nhập password của bạn:" required><br>
        </div>
        <div class="form-group">
            Confirmed password: <input class="form-control" type="password" name="confirmedPassword" placeholder="Xác nhận lại password đã nhập" required><br>
            @if (passwordMismatch == true)
            {
                <span class="text-danger">Password mismatch</span><br>
            }
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>