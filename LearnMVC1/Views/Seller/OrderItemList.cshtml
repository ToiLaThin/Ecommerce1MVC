@{ 
    List<OrderItemModel> waitingOrderItems = new List<OrderItemModel>();
    if (ViewData.ContainsKey("WaitingOrderItems"))
    {
        waitingOrderItems = (List<OrderItemModel>)ViewData["WaitingOrderItems"];
    }
}
<div id="orderItemsWaiting">
    <table class="table table-bordered text-center mb-0">
        <thead class="text-dark bg-warning">
            <tr>
                <th>OrderItemId</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Product Name</th>
                <th>Product Image</th>
                <th>OrderId</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach(OrderItemModel orderItem in waitingOrderItems)
            {
                <tr>
                    <td>OrderItem@(orderItem.OrderItemId)</td>
                    <td>@orderItem.OrderItemQuantity</td>
                    <td>@orderItem.OrderItemUnitPrice</td>
                    <td>@orderItem.OrderItemProduct.ProductName</td>
                    <td><img src="@orderItem.OrderItemProduct.ProductImage" width="50" height="50" /></td>
                    <td>@orderItem.OrderId</td>
                    <td>
                        <a class="btn btn-sm btn-success rounded" href="/Seller/OrderItem/ChangeStatus?orderItemId=@orderItem.OrderItemId&status=Valid"><i class="fas fa-check"></i></a>
                    </td>
                </tr>
            }    
        </tbody>
    </table>
    <br>
    <br>
</div>


<a class="btn btn-primary" href="/Common/Product/List">Back</a>
